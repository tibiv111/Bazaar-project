<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainLayout"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"

        android:outlineAmbientShadowColor="@color/B_dark">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/showMoreButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/white"

            android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:tint="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/textView_price_item_layout5"
            android:layout_width="wrap_content"
            android:layout_height="23dp"

            android:layout_marginStart="4dp"
            android:text="RON"
            android:textColor="@color/black"
            android:textSize="16sp"

            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textView_price_item_layout4"
            app:layout_constraintStart_toEndOf="@+id/textView_price_item_layout4"
            app:layout_constraintTop_toTopOf="@+id/textView_price_item_layout4" />

        <TextView
            android:id="@+id/textView_price_item_layout4"
            android:layout_width="wrap_content"
            android:layout_height="23dp"

            android:layout_marginStart="16dp"

            android:layout_marginTop="16dp"
            android:text="Price: "
            android:textColor="@color/black"
            android:textSize="16sp"

            app:layout_constraintBottom_toBottomOf="@+id/textView_price_item_layout3"
            app:layout_constraintStart_toEndOf="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/textView_name_item_layout3" />

        <ImageView
            android:id="@+id/imageView_item_layout4"
            android:layout_width="24dp"
            android:layout_height="24dp"

            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_user" />

        <TextView
            android:id="@+id/textView_name_item_layout3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:includeFontPadding="true"
            android:maxLines="1"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageView_item_layout3"
            app:layout_constraintTop_toTopOf="@+id/imageView_item_layout3" />

        <TextView
            android:id="@+id/textView_price_item_layout3"
            android:layout_width="wrap_content"
            android:layout_height="23dp"

            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="Amount: "


            android:textColor="@color/black"

            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView_name_item_layout3"
            app:layout_constraintTop_toBottomOf="@+id/textView_name_item_layout3"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView_item_price_amount_type3"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginStart="4dp"

            android:text="L"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/textView_price_item_layout3"
            app:layout_constraintTop_toTopOf="@+id/textView_price_item_layout3" />

        <ImageView
            android:id="@+id/imageView_item_layout3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"

            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="@+id/imageView_item_layout4"
            app:layout_constraintTop_toBottomOf="@+id/textView_seller_item_layout3"
            app:srcCompat="@drawable/ic_user" />

        <TextView
            android:id="@+id/textView_seller_item_layout3"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_item_layout4"
            app:layout_constraintStart_toEndOf="@+id/imageView_item_layout4"
            app:layout_constraintTop_toTopOf="@+id/imageView_item_layout4" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="4dp"
            android:text="|"
            android:textColor="@color/black"
            android:textSize="24sp"

            app:layout_constraintBottom_toBottomOf="@+id/textView_item_price_amount_type3"
            app:layout_constraintStart_toEndOf="@+id/textView_item_price_amount_type3"
            app:layout_constraintTop_toTopOf="@+id/textView_item_price_amount_type3" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/description_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="PLACEHOLDER TEXT"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView_price_item_layout3"
            app:layout_constraintTop_toBottomOf="@+id/textView_price_item_layout3" />

    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.cardview.widget.CardView>